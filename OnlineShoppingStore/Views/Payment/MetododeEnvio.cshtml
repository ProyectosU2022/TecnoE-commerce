@{
    ViewBag.Title = "MetodoEnvio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Método de Envío</title>
</head>
<body>
    <h4>Método de Envio</h4>
    <hr />
    <div class="">
        <div class="row">
            <label class="col-md-2 control-label">Provincia</label>
            <div class="col-md-4">
                <input type="text" class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <label class="col-md-2 control-label">Cantón</label>
            <div class="col-md-4">
                <input type="text" class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <label class="col-md-2 control-label">Distrito</label>
            <div class="col-md-4">
                <input type="text" class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <label class="col-md-2 control-label">Dirección Exacta</label>
            <div class="col-md-10">
                <input type="text" class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <label class="col-md-2 control-label">Método de Envio</label>
            <div class="col-md-4">
                <select class="form-control">
                    <option>Correos de Costa Rica</option>
                    <option>Uber Fast</option>
                    <option>Recoger en Tienda</option>
                </select>
            </div>
        </div>
        <br />
        <div class="row">
            <label class="col-md-2 control-label">Télefono de Contacto</label>
            <div class="col-md-4">
                <input type="text" class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <label class="col-md-2 control-label">Email de Contacto</label>
            <div class="col-md-4">
                <input type="text" class="form-control" />
            </div>
        </div>
        <br />
    </div>

    <div class="row">
        <a href="@Url.Action("CompraCompleta", "Payment")" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span> Enviar</a>
    </div>

</body>
</html>
